@{
    ViewData["Title"] = "Fun Run Registration";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>

<body>
    <section class="main">
        <div class="main-top">
            <h1>Dashboard</h1>
        </div>

        <div class="sidebar">
            <div class="logo"></div>
            <ul class="menu">
                <li class="active">
                    <a asp-controller="Home" asp-action="Dashboard">
                        <i class="fa-solid fa-table-columns" style="color: white;"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li class="account">
                    <a asp-controller="Home" asp-action="Account">
                        <i class="fa-solid fa-user" style="color: white;"></i>
                        <span>Account</span>
                    </a>
                </li>
                <li class="logout">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-right-from-bracket" style="color: white;"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Cards Section -->
        <div class="container my-4">
            <div class="row">
                <!-- Card 1 -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fa-solid fa-square-check" style="color: #002b75;"></i>
                            <h3>000</h3>
                            <h4>FUN RUNS COMPLETED</h4>
                            <button class="btn btn-primary view-btn" data-bs-toggle="modal" data-bs-target="#completedModal">View</button>
                        </div>
                    </div>
                </div>

                <!-- Modal for Card 2 -->
                <div class="modal fade" id="completedModal" tabindex="-1" aria-labelledby="completedModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="completedModalLabel">Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h4>LIST OF FUN RUNS COMPLETED</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>FunRun ID</th>
                                            <th>FunRun Name</th>
                                            <th>Date Finished</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ABC123</td>
                                            <td>ABC</td>
                                            <td>01/01/25</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fa-solid fa-person-running" style="color: #002b75;"></i>
                            <h3>000</h3>
                            <h4>UPCOMING FUN RUNS</h4>
                            <button class="btn btn-primary view-btn" data-bs-toggle="modal" data-bs-target="#upcomingModal">View</button>
                        </div>
                    </div>
                </div>

                <!-- Modal for Card 2 -->
                <div class="modal fade" id="upcomingModal" tabindex="-1" aria-labelledby="upcomingModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="upcomingModalLabel">Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h4>UPCOMING FUN RUNS</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>FunRun ID</th>
                                            <th>FunRun Name</th>
                                            <th>Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>DEF456</td>
                                            <td>DEF</td>
                                            <td>02/15/25</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fa-solid fa-hourglass-start" style="color: #002b75;"></i>
                            <h3>000</h3>
                            <h4>PENDING FUN RUN REGISTRATIONS</h4>
                            <button class="btn btn-primary view-btn" data-bs-toggle="modal" data-bs-target="#completedModal">View</button>
                        </div>
                    </div>
                </div>

                <!-- Modal for Card 3 -->
                <div class="modal fade" id="completedModal" tabindex="-1" aria-labelledby="completedModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="completedModalLabel">Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h4>LIST OF PENDING REGISTRATIONS</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>FunRun ID</th>
                                            <th>FunRun Name</th>
                                            <th>Date Finished</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ABC123</td>
                                            <td>ABC</td>
                                            <td>01/01/25</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card 4 -->
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fa-solid fa-face-frown" style="color: #002b75;"></i>
                            <h3>000</h3>
                            <h4>UNFINISHED FUN RUNS</h4>
                            <button class="btn btn-primary view-btn" data-bs-toggle="modal" data-bs-target="#completedModal">View</button>
                        </div>
                    </div>
                </div>

                <!-- Modal for Card 4 -->
                <div class="modal fade" id="completedModal" tabindex="-1" aria-labelledby="completedModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="completedModalLabel">Details</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h4>LIST OF UNFINISHED FUN RUNS</h4>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>FunRun ID</th>
                                            <th>FunRun Name</th>
                                            <th>Date Finished</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ABC123</td>
                                            <td>ABC</td>
                                            <td>01/01/25</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!-- Attendance Section -->
        <section class="attendance my-4">
            <div class="container">
                <h2 class="center-text">List of Fun Runs</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>FunRun ID</th>
                            <th>FunRun Name</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Participants</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>ABC123</td>
                            <td>ABC</td>
                            <td>01/01/25</td>
                            <td>Manila</td>
                            <td>50</td>
                            <td>On-Going</td>
                            <td>
                                <button class="btn btn-primary btn-sm">Register</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </section>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/registration.js" asp-append-version="true"></script>
</body>

</html>
