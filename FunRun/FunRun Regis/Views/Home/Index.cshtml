@{
    ViewData["Title"] = "Fun Run Registration";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
</head>

<body>
    <header class="bg-white py-3">
        <!-- White background -->
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="logo mb-0 text-black">Fun Run Registration WebApp</h1> <!-- Black logo text -->
            <nav>
                <!-- Corrected link for Home -->
                <a href="/Home/Index" class="btn btn-blue me-2">Home</a> <!-- Blue button -->
                <!-- Corrected link for Terms & Conditions -->
                <a href="/Home/TermsAndConditions" class="btn btn-blue me-2">Terms & Conditions</a> <!-- Blue button -->
            </nav>
        </div>
    </header>


    <main class="container text-center mt-5">
        <h2>Welcome to the Fun Run Registration Web App!</h2>
        <p class="lead mt-4">
            Join us for an exciting and energetic event. Register now and start your journey towards fun and fitness!
        </p>
        <a href="/Home/Registration" class="btn btn-primary btn-lg mt-4">Get Started</a>
    </main>

    <footer class="bg-light py-4 mt-5">
        <div class="container text-center">
            <p class="mb-0">© 2025 Fun Run. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
